<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ui.widget.MyActionBar
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:id="@+id/personality_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ui.widget.MyActionBar>


        <ui.widget.TextEditTextView
            android:id="@+id/personality_edit"
            android:layout_marginTop="8dp"
            android:text="万事如意"
            android:padding="8dp"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:textColor="@color/write"
            android:textColorHint="@color/colorEditHint"
            android:textSize="16sp" />



    </LinearLayout>
    <TextView
        android:id="@+id/personality_count"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:gravity="right"
        android:textColor="#ffffff"
        android:text="0/30"
        android:background="@color/colorPrimary"
        android:layout_below="@id/top"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>