<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#EDEBF2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ui.widget.MyActionBar
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:id="@+id/complaint_actionbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></ui.widget.MyActionBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/write"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="5dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorsell" />

                    <TextView
                        android:id="@+id/complaint_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="BTC"
                        android:textColor="@color/colorOrderMText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/complaint_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text="2018-08-10 10:33:17"
                        android:textColor="@color/colorOrderText"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="9dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/complaint_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="47850.00"
                            android:textColor="@color/colorOrderMText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/complaint_type_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="CNY"
                            android:textColor="@color/colorOrderText"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/complaint_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.012"
                            android:textColor="@color/colorOrderMText"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="数量"
                            android:textColor="@color/colorOrderText"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="9dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/complaint_deal_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="574.20"
                            android:textColor="@color/colorOrderMText"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="交易金额"
                            android:textColor="@color/colorOrderText"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/complaint_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/write"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/complaint_reason_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="请选择申诉原因"
                    android:textColor="@color/colorOrderText" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/mipmap_gary_next" />
            </LinearLayout>

            <ui.widget.TextEditTextView
                android:id="@+id/complaint_et"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/write"
                android:gravity="top|left"
                android:hint="请输入申诉理由"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/colorOrderText"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传凭证"
                        android:textColor="@color/colorEditHint"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（最多添加3张）"
                        android:textColor="@color/colorEditHint"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/complaint_add"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/mipmap_addpic" />

                    <include layout="@layout/add_image_layout"></include>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/releaseorder_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/mipmap_warning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="警告"
                    android:textColor="@color/colorOrderMText"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:text="提起申诉后资产将会冻结，申诉专员将介入本次交易，直至申诉结束。恶意申诉属于扰乱平台正常运营秩序的行为，情节严重将冻结账户。"
                android:textColor="@color/colorOrderText"
                android:textSize="14sp" />

            <Button
                android:id="@+id/complaint_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="34dp"
                android:background="#B3BAC9"
                android:text="提交申诉"
                android:textColor="@color/write"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>