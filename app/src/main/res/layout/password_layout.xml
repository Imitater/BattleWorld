<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp"
                android:text="@string/password_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ui.widget.TextEditTextView
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:id="@+id/password_old"
                android:textSize="14sp"
                android:textColorHint="@color/colorEditHint"
                android:hint="@string/password_old_hint"
                android:layout_marginLeft="32dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp"
                android:text="@string/password_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ui.widget.TextEditTextView
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColor="#ffffff"
                android:id="@+id/password_new"
                android:textSize="14sp"
                android:textColorHint="@color/colorEditHint"
                android:hint="@string/password_new_hint"
                android:layout_marginLeft="32dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp"
                android:text="@string/password_reput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ui.widget.TextEditTextView
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:id="@+id/password_renew"
                android:textSize="14sp"
                android:textColorHint="@color/colorEditHint"
                android:hint="@string/password_reput_hint"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <Button
        android:id="@+id/password_finish"
        android:background="@color/colorEditHint"
        android:text="@string/password_finish"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>