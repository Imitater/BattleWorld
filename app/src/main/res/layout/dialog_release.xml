<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <TextView
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#0A1F37"
        android:text="确认放行？"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:textColor="#8e0a1f37"
        android:text="请务必登录网上银行或第三方支付"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textColor="#8e0a1f37"
        android:text="账号确认收到该笔汇款，"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#8d0a1f37"
        ></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dialog_release_cancel"
            android:textSize="16sp"
            android:text="取消"
            android:textColor="#B3BAC9"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <View
            android:background="#8d0a1f37"
            android:layout_width="0.25dp"
            android:layout_height="50dp"></View>
        <Button
            android:id="@+id/dialog_release_finish"
            android:textColor="@color/colorButtomTab"
            android:text="确认"
            android:textSize="16sp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>