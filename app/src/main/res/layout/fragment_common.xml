<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mipmap_background"

    android:orientation="vertical">

    <include layout="@layout/actionbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingLeft="16dp"
                android:paddingBottom="14dp"
                android:paddingRight="20dp"
                android:text="@string/common_name"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp" />
            <ui.widget.TextEditTextView
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:id="@+id/common_name"
                android:background="@android:color/transparent"
                android:textColorHint="@color/colorEditHint"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:hint="@string/common_name_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingLeft="16dp"
                android:paddingBottom="14dp"
                android:text="@string/common_number"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp" />
            <ui.widget.TextEditTextView
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:id="@+id/common_number"
                android:background="@android:color/transparent"
                android:textColorHint="@color/colorEditHint"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:hint="@string/common_code_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/common_finish"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:text="@string/password_finish"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:background="@color/colorEditHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
