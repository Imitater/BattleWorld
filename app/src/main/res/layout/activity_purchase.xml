<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ui.widget.MyActionBar
        android:id="@+id/purchase_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ui.widget.MyActionBar>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/purchase_commontablayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/color_tab"
        tl:tl_indicator_corner_radius="2dp"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width="16dp"
        tl:tl_textSelectColor="@color/color_tab"
        tl:tl_textUnselectColor="@color/colorgray"
        tl:tl_textsize="16sp"></com.flyco.tablayout.CommonTabLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/purchase_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</LinearLayout>