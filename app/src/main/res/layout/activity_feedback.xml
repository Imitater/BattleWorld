<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEBF2">
    <ui.widget.MyActionBar
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:id="@+id/feed_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ui.widget.MyActionBar>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    <ui.widget.TextEditTextView
        android:imeOptions="actionDone"
        android:id="@+id/feed_et"
        android:gravity="top|left"
        android:hint="@string/feed_put_hint"
        android:textSize="14sp"
        android:textColorHint="@color/colorEditHint"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <TextView
            android:id="@+id/feed_et_count"
            android:layout_alignParentRight="true"
            android:text="0/1000"
            android:textColor="@color/colorEditHint"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorEditHint"
            android:textSize="14sp"
            android:text="@string/feed_put_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feed_add"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mipmap_add"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <include layout="@layout/add_image_layout"></include>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ui.widget.TextEditTextView
            android:imeOptions="actionDone"
            android:id="@+id/feed_contact"
            android:paddingTop="10dp"
            android:gravity="top|left"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:textColorHint="@color/colorEditHint"
            android:hint="@string/feed_way_hint"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="16dp"
            android:background="@mipmap/mipmap_gift"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#0A1F37"
            android:layout_marginLeft="8dp"
            android:textSize="15dp"
            android:text="@string/feed_show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        android:textColor="#b30a1f37"
        android:text="@string/feed_way_show"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/feed_finish"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorEditHint"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="@string/feed_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>